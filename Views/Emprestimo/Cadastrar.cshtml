@model Emprestimo
@{
    ViewData["title"] = "Cadastrar Emprestimos";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de emprestimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Post" >
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" asp-for="Recebedor" class="form-control" id="Recebedor" placeholder="Quem esta recebendo o livro">
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" asp-for="Fornecedor" class="form-control" id="Fornecedor" placeholder="Quem esta fornecendo o livro">
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" asp-for="Livro" class="form-control" id="Livro" placeholder="Digite o titulo do livro">
        </div>

        <div class="d-flex gap-3 mt-5">
            <button type="submit" class="btn btn-success w-50">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Emprestimo">Voltar</a>
        </div>
    </form>

</div>
