@model Emprestimo
@{
    ViewData["title"] = "Excluir Emprestimos";
}

<div class="container bg-gradient p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-dark display-6 text-muted text-uppercase">Excluir emprestimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">

        <h2 class="text-dark text-uppercase">Tem certeza que deseja excluir este emprestimo</h2>

        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="Recebedor" class="form-label text-dark text-uppercase">Recebedor:</label>
            <input type="text" asp-for="Recebedor" class="form-control" id="Recebedor" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-dark text-uppercase">Fornecedor</label>
            <input type="text" asp-for="Fornecedor" class="form-control" id="Fornecedor" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-dark text-uppercase">Livro</label>
            <input type="text" asp-for="Livro" class="form-control" id="Livro" disabled>
            <span class="text-danger" asp-validation-for="Livro"></span>
        </div>

        <div class="d-flex gap-3 mt-5">
            <button type="submit" class="btn btn-danger w-25">Excluir</button>
            <a class="btn btn-primary w-25" asp-controller="Emprestimo" asp-action="Emprestimo">Voltar</a>
        </div>
    </form>

</div>
