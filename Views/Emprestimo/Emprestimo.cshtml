@model IEnumerable<Emprestimo>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
    </div>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Recebedor</th>
            <th>Fornecedor</th>
            <th>Livro</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(var emprestimo in Model)
            {
                <tr>
                    <th scope="row">@emprestimo.Recebedor</th>
                    <td>@emprestimo.Fornecedor</td>
                    <td>@emprestimo.Livro</td>
                    <td>@emprestimo.DataEmprestimo</td>
                </tr>
            }
        }
    </tbody>
</table>

</div>